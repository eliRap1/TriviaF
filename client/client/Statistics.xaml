<Page x:Class="client.Statistics"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:client"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Statistics">


    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF0F2027" Offset="0.0"/>
                <GradientStop Color="#FF203A43" Offset="0.5"/>
                <GradientStop Color="#FF2C5364" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Content="← Back"
                Click="BackButton_Click"
                Width="100"
                Height="35"
                Background="#FF3E8EDE"
                Foreground="White"
                FontWeight="Bold"
                BorderThickness="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="20"
                Cursor="Hand"/>
        <Grid x:Name="menuPanel" Grid.Row="1">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
                <TextBlock Text="Statistics Menu"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>
                <Button Content="Personal Statistics"
                        Height="50"
                        FontSize="16"
                        Background="#FF3E8EDE"
                        Foreground="White"
                        Click="PersonalStats_Click"/>
                <Button Content="High Scores"
                        Height="50"
                        FontSize="16"
                        Background="#FF3E8EDE"
                        Foreground="White"
                        Click="HighScores_Click"/>
            </StackPanel>
        </Grid>
        <Frame x:Name="statisticsFrame"
       Grid.Row="1"
       NavigationUIVisibility="Hidden" />
    </Grid>
</Page>
