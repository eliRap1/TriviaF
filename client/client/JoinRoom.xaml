<Page x:Class="client.JoinRoom"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:client"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="JoinRoom"
      Background="#FF1E1F4B">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Page Title -->
        <TextBlock Text="Available Rooms"
                   FontSize="32"
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>
        <Button Content="Back"
        Width="80"
        Height="35"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Margin="20"
        Click="BackButton_Click"
        Background="#FF1E1F4B"
        Foreground="White"
        FontWeight="Bold"
        BorderThickness="0"/>
        <!-- Room List -->
        <ScrollViewer  Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="RoomsPanel" Orientation="Vertical" Margin="0,0,0,10">

                <!-- example -->
                <Border Background="White" CornerRadius="12" Margin="0,0,0,15" Padding="16" Width="700" HorizontalAlignment="Center">
                    <DockPanel>
                        <StackPanel DockPanel.Dock="Left">
                            <TextBlock Text="Room Name: Trivia Legends"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="Navy"/>
                            <TextBlock Text="Players: 3 / 6"
                                       FontSize="14"
                                       Foreground="Gray"/>
                        </StackPanel>
                        <Button Content="Join"
                                Width="80"
                                Height="30"
                                HorizontalAlignment="Right"
                                Background="#1E90FF"
                                Foreground="White"
                                FontWeight="Bold"
                                BorderThickness="0"
                                Cursor="Hand"
                                DockPanel.Dock="Right"
                                Margin="10,0,0,0"/>
                    </DockPanel>
                </Border>

                <!-- Repeat more Border blocks for other rooms -->
            </StackPanel>
        </ScrollViewer>
        <Frame x:Name="JoinRoomFrame" Grid.ColumnSpan="100" Grid.RowSpan="100"/>
    </Grid>
</Page>
