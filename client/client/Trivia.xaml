<Page x:Class="client.Trivia"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:client"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Trivia">

    <Grid>
        <!-- gradient background -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF0F2027" Offset="0.0"/>
                <GradientStop Color="#FF203A43" Offset="0.5"/>
                <GradientStop Color="#FF2C5364" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Main panel -->
        <Border Width="400" Height="400"
                Background="#EEFFFFFF"
                CornerRadius="16"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Main Menu"
                           FontSize="30"
                           FontWeight="Bold"
                           Foreground="#FF203A43"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <!-- Create Room Button -->
                <Button Content="Create Room" Margin="0,10,0,0"
                        Width="220" Height="50"
                        FontSize="16"
                        Background="Black"
                        Foreground="White"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="CreateRoom_Click"/>

                <!-- Join Room Button -->
                <Button Content="Join Room" Margin="0,10,0,0"
                        Width="220" Height="50"
                        FontSize="16"
                        Background="#FF0F2027"
                        Foreground="White"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="JoinRoom_Click"/>

                <!-- Statistics Button -->
                <Button Content="Statistics" Margin="0,10,0,0"
                        Width="220" Height="50"
                        FontSize="16"
                        Background="#FF203A43"
                        Foreground="White"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="Statistics_Click"/>

                <!-- Exit Button -->
                <Button Content="Exit" Margin="0,10,0,0"
                        Width="220" Height="50"
                        FontSize="16"
                        Background="#FF2C5364"
                        Foreground="White"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="Exit_Click"/>
            </StackPanel>
        </Border>
        <Frame x:Name="MainFrame" Grid.ColumnSpan="100" Grid.RowSpan="100"/>
    </Grid>
</Page>
