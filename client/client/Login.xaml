<Page x:Class="client.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:client"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                <GradientStop Color="#FF6EE7FF" Offset="0.0"/>
                <GradientStop Color="Blue" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Border CornerRadius="16"
                Background="White"
                Padding="30"
                Width="360" Height="320"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect Color="#44000000"
                                  BlurRadius="20"
                                  ShadowDepth="4"
                                  Opacity="0.3"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Log In"
                           FontFamily="Segoe UI"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="Black"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Username -->
                <StackPanel Grid.Row="1" Margin="0,0,0,10">
                    <TextBlock Text="Username" FontWeight="SemiBold" Foreground="#333"/>
                    <TextBox x:Name="txtUsername"
                             Height="30"
                             FontSize="14"
                             Padding="6"
                             BorderBrush="#FF00BFFF"
                             BorderThickness="1"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Margin="0,0,0,20">
                    <TextBlock Text="Password" FontWeight="SemiBold" Foreground="#333"/>
                    <PasswordBox x:Name="txtPassword"
                                 Height="30"
                                 FontSize="14"
                                 Padding="6"
                                 BorderBrush="#FF00BFFF"
                                 BorderThickness="1"/>
                </StackPanel>

                <!-- Login Button -->
                <Button x:Name="btnLogin"
                        Grid.Row="3"
                        Content="Log In"
                        Width="200" Height="40"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Background="#FF00BFFF"
                        Foreground="White"
                        BorderThickness="0"
                        HorizontalAlignment="Center"
                        Click="btnLogin_Click"/>

                <!-- Sign Up Link -->
                <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <TextBlock Text="Don't have an account?" Foreground="#555"/>
                    <Button x:Name="btnSignUpLink"
                            Content="Sign Up"
                            Background="Transparent"
                            Foreground="#FF00BFFF"
                            BorderThickness="0"
                            FontWeight="Bold"
                            Padding="4,0"
                            Click="btnSignUp_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
